<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fabric_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/details_back"
    tools:context="creativedays.com.dilzas.FabricDetailsActivity">

    <com.flaviofaria.kenburnsview.KenBurnsView
        android:id="@+id/ken"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:background="@drawable/details_back_trans"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/back_white"
            android:id="@+id/back"
            android:layout_width="45dp"
            android:layout_height="45dp" />

    <ListView
        android:fadingEdgeLength="9dp"
        android:requiresFadingEdge="vertical"
        android:dividerHeight="5dp"
        android:divider="#00ffffff"
        android:id="@+id/colors_list"
        android:layout_width="120dp"
        android:layout_height="match_parent">
    </ListView>
    </LinearLayout>




    <FrameLayout
        android:layout_marginLeft="120dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/titles_layout"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:typeface="sans"
            android:padding="3dp"
            android:layout_marginBottom="5dp"
            android:shadowColor="#000000"
            android:shadowDy="2"
            android:shadowDx="2"
            android:shadowRadius="10"
            android:textColor="@android:color/white"
            android:id="@+id/fabric_title"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:typeface="sans"
            android:visibility="gone"
            android:padding="3dp"
            android:shadowColor="#000000"
            android:shadowDy="2"
            android:shadowDx="2"
            android:shadowRadius="10"
            android:textColor="@android:color/white"
            android:id="@+id/color_title"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

        <ProgressBar
            android:visibility="gone"
            android:id="@+id/fabric_progress"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp" />
    </FrameLayout>

</FrameLayout>
