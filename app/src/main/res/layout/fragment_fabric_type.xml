<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_indoor_outdoor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="40dp"
    tools:context="creativedays.com.dilzas.FabricTypeActivity">



    <RelativeLayout
        android:background="@drawable/dialog_full_holo_light"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.flaviofaria.kenburnsview.KenBurnsView
        android:src="@drawable/indoors"
        android:id="@+id/ken"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



        <TextView
            android:id="@+id/fabric_type_title"
            android:layout_marginBottom="20dp"
            android:textColor="@color/menu_text"
            android:padding="10dp"
            android:textSize="20sp"
            android:background="@drawable/border_sides"
            android:text="@string/indoor"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>



</LinearLayout>
</FrameLayout>